# Database Configuration (PostgreSQL + PostGIS)
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/vanguard_defense?schema=public"

# Redis Configuration (BullMQ & Socket.io)
REDIS_URL="redis://localhost:6379"

# JWT Configuration
# Use 'openssl rand -base64 32' to generate a secure secret
JWT_SECRET="your_secure_jwt_secret_here"
JWT_ACCESS_EXPIRATION="15m"
JWT_REFRESH_EXPIRATION="7d"

# Google Gemini AI Integration
GEMINI_API_KEY="your_gemini_api_key_here"

# Argon2 Security Parameters (as per GEMINI.md)
ARGON2_MEMORY_COST=65536
ARGON2_TIME_COST=3
ARGON2_PARALLELISM=4

# Application Configuration
PORT=3000
NODE_ENV="development"
